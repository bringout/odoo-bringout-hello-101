<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="hello_component_template" owl="1">
        <div class="hello-component">
            <div class="hello-header">
                <h2>Hello 101</h2>
                <p class="hello-subtitle">Welcome to your custom Odoo module!</p>
            </div>
            
            <div class="hello-content">
                <div class="hello-message-card">
                    <div class="card-body">
                        <t t-if="state.isLoading">
                            <div class="hello-loading">
                                <i class="fa fa-spinner fa-spin"></i>
                                <span>Loading...</span>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="hello-message">
                                <i class="fa fa-hand-o-right text-primary"></i>
                                <span t-esc="state.message"></span>
                            </div>
                            
                            <t t-if="state.userInfo">
                                <div class="hello-info">
                                    <small class="text-muted">
                                        Welcome <strong t-esc="state.userInfo.name"></strong>
                                        from <strong t-esc="state.userInfo.company"></strong>
                                    </small>
                                </div>
                            </t>
                        </t>
                    </div>
                    
                    <div class="card-footer">
                        <button class="btn btn-primary" t-on-click="refreshMessage">
                            <i class="fa fa-refresh"></i>
                            Refresh Message
                        </button>
                    </div>
                </div>
            </div>
            
            <div class="hello-footer">
                <p class="text-muted">
                    <small>
                        Powered by <strong>Bringout</strong> â€¢ 
                        Built with Odoo 16 &amp; OWL
                    </small>
                </p>
            </div>
        </div>
    </t>
    
</templates>
